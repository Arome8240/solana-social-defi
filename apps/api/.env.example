# Server
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/solana-social-defi

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Wallet Encryption (for custodial wallets)
WALLET_ENCRYPTION_KEY=your-wallet-encryption-key-min-32-chars-change-in-production

# Solana
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
FEE_PAYER_PRIVATE_KEY=your-base58-encoded-private-key-for-gasless-txs
SKR_MINT_AUTHORITY_PRIVATE_KEY=your-base58-encoded-skr-mint-authority-key
SKR_TOKEN_MINT=your-skr-token-mint-address

# GetStream
GETSTREAM_API_KEY=your-getstream-api-key
GETSTREAM_API_SECRET=your-getstream-api-secret
GETSTREAM_APP_ID=your-getstream-app-id

# Jupiter (for swaps)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Rewards
DAILY_REWARD_CRON=0 0 * * *
SKR_PER_LIKE=0.1
SKR_PER_COMMENT=0.5
SKR_PER_TOKEN_SALE=10

# Logging
LOG_LEVEL=info
